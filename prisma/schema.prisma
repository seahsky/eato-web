generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

// User model for authentication and profile
model User {
  id            String    @id @default(auto()) @map("_id") @db.ObjectId
  clerkId       String    @unique // Clerk user ID
  email         String    @unique
  name          String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  // Profile data for BMR calculation
  profile       Profile?

  // Partner linking (bidirectional)
  partnerId     String?   @db.ObjectId @unique
  partner       User?     @relation("PartnerLink", fields: [partnerId], references: [id], onDelete: NoAction, onUpdate: NoAction)
  partnerOf     User?     @relation("PartnerLink")

  // Partner link request system
  partnerLinkCode       String?   @unique
  partnerLinkCodeExpiry DateTime?

  // Food tracking
  foodEntries   FoodEntry[]
  dailyLogs     DailyLog[]
  recipes       Recipe[]
  favoriteFoods FavoriteFood[]

  // Push notifications
  pushSubscriptions    PushSubscription[]
  notificationSettings NotificationSettings?
  sentNudges           Nudge[]              @relation("SentNudges")
  receivedNudges       Nudge[]              @relation("ReceivedNudges")
}

// Profile for BMR calculation
model Profile {
  id            String        @id @default(auto()) @map("_id") @db.ObjectId
  userId        String        @unique @db.ObjectId
  user          User          @relation(fields: [userId], references: [id], onDelete: Cascade)

  // Physical data
  age           Int
  weight        Float         // in kg
  height        Float         // in cm
  gender        Gender
  activityLevel ActivityLevel

  // Calculated values
  bmr           Float         // Basal Metabolic Rate
  tdee          Float         // Total Daily Energy Expenditure
  calorieGoal   Float         // User's daily target

  // User preferences
  energyUnit    EnergyUnit    @default(KCAL)

  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt
}

enum Gender {
  MALE
  FEMALE
}

enum EnergyUnit {
  KCAL
  KJ
}

enum ActivityLevel {
  SEDENTARY
  LIGHTLY_ACTIVE
  MODERATELY_ACTIVE
  ACTIVE
  VERY_ACTIVE
}

// Individual food entry
model FoodEntry {
  id              String    @id @default(auto()) @map("_id") @db.ObjectId
  userId          String    @db.ObjectId
  user            User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  // Food identification
  name            String
  barcode         String?
  brand           String?
  imageUrl        String?

  // Nutritional data (per serving consumed)
  calories        Float
  protein         Float?
  carbs           Float?
  fat             Float?
  fiber           Float?
  sugar           Float?
  sodium          Float?

  // Serving info
  servingSize     Float
  servingUnit     String

  // Meal categorization
  mealType        MealType

  // Timestamps
  loggedAt        DateTime  @default(now())
  consumedAt      DateTime

  // Reference to daily log
  dailyLogId      String?   @db.ObjectId
  dailyLog        DailyLog? @relation(fields: [dailyLogId], references: [id])

  // Source tracking
  isManualEntry   Boolean        @default(false)
  dataSource      FoodDataSource @default(MANUAL)
  openFoodFactsId String?
  usdaFdcId       Int?

  // Recipe reference (if logged from a recipe)
  recipeId        String?   @db.ObjectId

  // Partner logging fields
  loggedByUserId  String?        @db.ObjectId
  approvalStatus  ApprovalStatus @default(APPROVED)
  rejectionNote   String?
}

enum MealType {
  BREAKFAST
  LUNCH
  DINNER
  SNACK
}

enum ApprovalStatus {
  APPROVED
  PENDING
  REJECTED
}

enum FoodDataSource {
  OPEN_FOOD_FACTS
  USDA
  MANUAL
}

// Aggregated daily totals
model DailyLog {
  id            String      @id @default(auto()) @map("_id") @db.ObjectId
  userId        String      @db.ObjectId
  user          User        @relation(fields: [userId], references: [id], onDelete: Cascade)

  date          DateTime    // Start of day

  // Aggregated totals
  totalCalories Float       @default(0)
  totalProtein  Float       @default(0)
  totalCarbs    Float       @default(0)
  totalFat      Float       @default(0)
  totalFiber    Float       @default(0)

  // Goal tracking
  calorieGoal   Float
  goalMet       Boolean     @default(false)

  // Related entries
  entries       FoodEntry[]

  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt

  @@unique([userId, date])
}

// Custom recipe created by user
model Recipe {
  id              String             @id @default(auto()) @map("_id") @db.ObjectId
  userId          String             @db.ObjectId
  user            User               @relation(fields: [userId], references: [id], onDelete: Cascade)

  // Recipe identification
  name            String
  description     String?
  imageUrl        String?

  // Yield (finished product weight in grams)
  yieldWeight     Float
  yieldUnit       String             @default("g")

  // Pre-calculated per-100g nutrition
  caloriesPer100g Float
  proteinPer100g  Float
  carbsPer100g    Float
  fatPer100g      Float
  fiberPer100g    Float              @default(0)

  // Ingredients
  ingredients     RecipeIngredient[]

  createdAt       DateTime           @default(now())
  updatedAt       DateTime           @updatedAt
}

// Individual ingredient in a recipe
model RecipeIngredient {
  id               String   @id @default(auto()) @map("_id") @db.ObjectId
  recipeId         String   @db.ObjectId
  recipe           Recipe   @relation(fields: [recipeId], references: [id], onDelete: Cascade)

  // Ingredient identification
  name             String

  // Quantity specification
  quantity         Float              // Amount or percentage value
  unit             String             // "g", "kg", "ml", "L", "%"

  // Baker's percentage support
  isPercentage     Boolean            @default(false)
  baseIngredientId String?            @db.ObjectId

  // Per-100g nutrition of this ingredient
  caloriesPer100g  Float
  proteinPer100g   Float
  carbsPer100g     Float
  fatPer100g       Float
  fiberPer100g     Float              @default(0)

  // Source tracking
  isManualEntry    Boolean            @default(false)
  dataSource       FoodDataSource     @default(MANUAL)
  openFoodFactsId  String?
  usdaFdcId        Int?

  // Order in recipe
  sortOrder        Int                @default(0)
}

// User's favorited foods for quick access
model FavoriteFood {
  id              String         @id @default(auto()) @map("_id") @db.ObjectId
  userId          String         @db.ObjectId
  user            User           @relation(fields: [userId], references: [id], onDelete: Cascade)

  // Food identification (snapshot of product data)
  name            String
  brand           String?
  imageUrl        String?
  barcode         String?

  // Per-100g nutrition
  caloriesPer100g Float
  proteinPer100g  Float
  carbsPer100g    Float
  fatPer100g      Float
  fiberPer100g    Float          @default(0)
  sugarPer100g    Float          @default(0)
  sodiumPer100g   Float          @default(0)

  // Source tracking
  dataSource      FoodDataSource
  openFoodFactsId String?
  usdaFdcId       Int?

  // Default serving (from last log)
  defaultServingSize Float       @default(100)
  defaultServingUnit String      @default("g")

  createdAt       DateTime       @default(now())

  @@unique([userId, name, brand])
}

// Cache for food search results (persists across server restarts)
model SearchCache {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  queryHash  String   @unique // SHA-256 of normalized query
  query      String // Original query (lowercase, trimmed)
  results    Json // Normalized FoodProduct[]
  totalCount Int
  sources    Json // { usda: { count, error? }, openFoodFacts: { count, error? } }
  createdAt  DateTime @default(now())
  expiresAt  DateTime // TTL for cache invalidation
  hitCount   Int      @default(0) // Track popularity for analytics

  @@index([expiresAt])
}

// Cache for query translations (non-English to English)
model TranslationCache {
  id             String   @id @default(auto()) @map("_id") @db.ObjectId
  originalText   String // Original query text (normalized)
  originalHash   String   @unique // SHA-256 of normalized original text
  detectedLang   String // ISO 639-1 code (e.g., "zh", "ja", "ko")
  translatedText String // English translation
  createdAt      DateTime @default(now())
  expiresAt      DateTime // TTL for cache invalidation (30 days)
  hitCount       Int      @default(0) // Track usage for analytics

  @@index([expiresAt])
}

// Push notification subscription per device
model PushSubscription {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  userId    String   @db.ObjectId
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  endpoint  String   @unique
  p256dh    String
  auth      String
  userAgent String?
  createdAt DateTime @default(now())

  @@index([userId])
}

// User notification preferences
model NotificationSettings {
  id     String @id @default(auto()) @map("_id") @db.ObjectId
  userId String @unique @db.ObjectId
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  // Partner activity notifications
  partnerFoodLogged  Boolean @default(true)
  partnerGoalReached Boolean @default(true)
  partnerLinked      Boolean @default(true)

  // Nudge notifications
  receiveNudges Boolean @default(true)

  // Daily reminder preferences (HH:MM format, null = disabled)
  breakfastReminderTime String?
  lunchReminderTime     String?
  dinnerReminderTime    String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// Nudge history for rate limiting
model Nudge {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  fromUserId String   @db.ObjectId
  fromUser   User     @relation("SentNudges", fields: [fromUserId], references: [id], onDelete: Cascade)
  toUserId   String   @db.ObjectId
  toUser     User     @relation("ReceivedNudges", fields: [toUserId], references: [id], onDelete: Cascade)
  message    String?
  createdAt  DateTime @default(now())

  @@index([fromUserId])
  @@index([toUserId])
}

